<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SignUpActivity">

    <!--Logo-->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_app"
        android:layout_gravity="center"/>
    <!--Tiêu đề-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_gravity="center"/>
    <!--Username-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_border2"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_user"
            android:layout_marginEnd="10dp" />
        <EditText
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:inputType="text"
            android:textColorHint="#50FFFFFF"
            android:textSize="20sp"
            android:textColor="@color/material_dynamic_neutral100"/>
    </FrameLayout>
    <!--Password-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_border2"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_password"
            android:layout_marginStart="10dp"
            android:layout_gravity="start|center_vertical" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="70dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#50FFFFFF"
            android:textSize="20sp"
            android:textColor="@color/material_dynamic_neutral100">
        </EditText>
        <!--Icon mắt-->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/logo_eye1"
            android:layout_gravity="end|center_vertical"/>
    </FrameLayout>
    <!--confirm password-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_border2"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_password"
            android:layout_marginStart="10dp"
            android:layout_gravity="start|center_vertical" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="70dp"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textColorHint="#50FFFFFF"
            android:textSize="20sp"
            android:textColor="@color/material_dynamic_neutral100">
        </EditText>
        <!--Icon mắt-->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/logo_eye1"
            android:layout_gravity="end|center_vertical"/>
    </FrameLayout>

    <!--Email-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo_border2"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/lcon_mail"
            android:layout_marginStart="10dp"
            android:layout_gravity="start|center_vertical" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="@string/email"
            android:paddingStart="70dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColorHint="#50FFFFFF"
            android:textSize="20sp"
            android:textColor="@color/material_dynamic_neutral100"
            tools:ignore="RtlSymmetry">
        </EditText>
    </FrameLayout>



</LinearLayout>
